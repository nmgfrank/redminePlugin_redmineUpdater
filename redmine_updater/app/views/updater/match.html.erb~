               <% column[1] = column[1].unpack('U*').pack('U*') if column[1].kind_of?(String) %>
               <%= content_tag 'td', column[1] %>
            <% end %>
    </tr>
    <% end %>
    <tr class="<%= cycle("odd", "even") %>">
        <% @headers.each do |column| %><td>...</td><% end %>
    </tr>
    </tbody>
</table>

